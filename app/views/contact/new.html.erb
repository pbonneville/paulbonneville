<div style="background: url(/img/jumbotronbackground.jpg) no-repeat top; width: 100%; height: 50px;"></div>

<div class="container" style="margin-bottom: 40px;">
  <div class="row">
    <div class="col-md-12">
      <%= render partial: "shared/header", locals: {:title => 'Contact', :subtitle => 'Get in touch'} %>
      <%= markdown(Content.find_by_title('Contact').content) %>
      <hr>
    </div>
  </div>
  <div class="row">
    <div class="col-md-3">
      <div style="margin-bottom: 20px">
        <a href="http://www.linkedin.com/in/paulbonneville/" target="_blank"><i class="fa fa-linkedin-square fa-2x"></i></a>
        <a href="https://twitter.com/paulbonneville" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
        <a href="https://www.facebook.com/paul.r.bonneville" target="_blank"><i class="fa fa-facebook-square fa-2x"></i></a>
        <a href="https://github.com/pbonneville" target="_blank"><i class="fa fa-github fa-2x"></i></a>
        <a href="http://stackoverflow.com/users/1134576/paul-bonneville" target="_blank"><i class="fa fa-stack-overflow fa-2x"></i></a>
      </div>
    </div>
    <div class="col-md-9">
      <%= form_for @contact, :url => contact_path do |f| %>
          <div class="field">
            <%= f.label :name %>
            <%= f.text_field :name, :required => true %>
          </div>
          <div class="field">
            <%= f.label 'E-mail Address' %>
            <%= f.text_field :email, :required => true %>
          </div>
          <div class="field">
            <%= f.label :message %>
            <%= f.text_area :message, :required => true %>
          </div>
          <div class="hidden">
            <%= f.text_field :nickname %>
          </div>
          <div class="actions">
            <%= f.submit 'Send message', :class => 'btn btn-primary' %>
          </div>
      <% end %>
    </div>
  </div>
</div>

