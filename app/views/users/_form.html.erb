<%= render partial: "shared/admin_form_errors", locals: {:entry_errors => @user.errors} %>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#general" data-toggle="tab">General</a></li>
</ul>

<%= form_for @user, :html => {:class => 'admin'} do |f| %>
    <div class="row admin-row">
      <div class="col-md-9">
        <div class="tab-content admin-tab-content">
          <div class="tab-pane active" id="general">
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email %>
            </div>
            <div class="field">
              <%= f.label :approved %>
              <%= f.check_box :approved %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <%= f.submit :class => 'btn btn-block btn-success btn-lg' %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= f.label 'Created' %>
            <%= @user.created_at %>
          </li>
          <li class="list-group-item">
            <%= f.label 'Last Updated' %>
            <%= @user.updated_at %>
          </li>
        </ul>
      </div>
    </div>
<% end %>
