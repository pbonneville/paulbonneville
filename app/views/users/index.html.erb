<%= render partial: "shared/admin_header_index", locals: { :link_path => new_user_path } %>
<div class="row admin-row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <table class="admin">
        <thead>
        <tr>
          <th>Email</th>
          <th>Approved</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr class="admin_tr" data-link="<%= edit_user_path(user) %>">
              <td><%= user.email %></td>
              <td><%= user.approved %></td>
              <td>
                <div class="index-actions">
                  <%= link_to t(:edit), edit_user_path(user), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:review), user_path(user), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:delete), user_path(user), method: :delete, data: { confirm: t(:are_you_sure) }, :class => 'btn btn-danger btn-xs' %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= render partial: "shared/admin_index_table_panel_footer", locals: { :entry_objects => @users } %>
    </div>
  </div>
</div>
