<%= render partial: "shared/admin_header", locals: { :title => admin_title_listing(controller),
                                                     :links => [{ :title => admin_label_new_entry(controller),
                                                                  :path => new_user_path }] } %>
<div class="row" style="margin-bottom: 20px;">
  <div class="col-md-3 tk-myriad-pro">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filters</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>
  <div class="col-md-9 tk-myriad-pro">
    <div class="panel panel-default">
      <table>
        <thead>
        <tr>
          <th>Email</th>
          <th>Approved</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
            <tr class="admin_tr" data-link="<%= edit_user_path(user) %>">
              <td><%= user.email %></td>
              <td><%= user.approved %></td>
              <td>
                <div style="float: right">
                  <%= link_to t(:edit), edit_user_path(user), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:review), user_path(user), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:delete), user_path(user), method: :delete, data: { confirm: t(:are_you_sure) }, :class => 'btn btn-danger btn-xs' %>
                </div>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
