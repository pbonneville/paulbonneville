<%= render partial: "shared/admin_form_errors", locals: { :entry_errors => @admin_blog_entry.errors } %>


<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#general" data-toggle="tab">General</a></li>
  <li><a href="#body" data-toggle="tab">Body</a></li>
</ul>

<%= form_for(@admin_blog_entry, :html => { :class => 'admin' }) do |f| %>
    <div class="row admin-row">
      <div class="col-md-9">
        <div class="tab-content admin-tab-content">
          <div class="tab-pane active" id="general">
            <div class="field">
              <%= f.label :title %>
              <%= f.text_field :title %>
            </div>
            <div class="field">
              <%= f.label 'Excerpt' %>
              <%= f.text_field :excerpt %>
            </div>
            <div class="field">
              <%= f.label 'Publish Date' %>
              <%= f.datetime_select :publish_at %>
            </div>
          </div>
          <div class="tab-pane" id="body">
            <div class="field">
              <%= render partial: "shared/admin_form_markup_field", locals: { :field_variable => f, :markup_field => :body } %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <%= f.submit :class => 'btn btn-block btn-success btn-lg', :data => { :disable_with => "Saving..." } %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= f.label 'Publish' %>
            <%= f.check_box :publish %> Publish this entry?
          </li>
          <li class="list-group-item">
            <%= f.label 'Feature' %>
            <%= f.check_box :featured %> Feature this entry?
          </li>
          <li class="list-group-item">
            <%= f.label 'Created' %>
            <%= @admin_blog_entry.created_at %>
          </li>
          <li class="list-group-item">
            <%= f.label 'Last Updated' %>
            <%= @admin_blog_entry.updated_at %>
          </li>
        </ul>
      </div>
    </div>
<% end %>
