<%= render partial: "shared/header", locals: {:title => 'Listing Portfolio Platforms'} %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Sortorder</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @portfolio_platforms.each do |portfolio_platform| %>
      <tr>
        <td><%= portfolio_platform.title %></td>
        <td><%= portfolio_platform.sortOrder %></td>
        <td><%= link_to 'Show', admin_portfolio_platform_path(portfolio_platform) %></td>
        <td><%= link_to 'Edit', edit_admin_portfolio_platform_path(portfolio_platform) %></td>
        <td><%= link_to 'Destroy', admin_portfolio_platform_path(portfolio_platform), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render partial: "shared/admin_bottom_links", locals: {:links => [{:title => 'New Portfolio platform', :path => new_admin_portfolio_platform_path}] } %>
