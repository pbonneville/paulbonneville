<%= render partial: "shared/admin_header_index", locals: { :model => @resume_sections.first } %>
<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <table class="admin">
        <thead>
        <tr>
          <th>Title</th>
          <th>Sortorder</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @resume_sections.each do |resume_section| %>
            <tr class="admin_tr" data-link="<%= edit_admin_resume_section_path(resume_section) %>">
              <td><%= resume_section.title %></td>
              <td><%= resume_section.sortOrder %></td>
              <td>
                <div class="index-actions">
                  <%= link_to t(:edit), edit_admin_resume_section_path(resume_section), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:review), admin_resume_section_path(resume_section), :class => 'btn btn-primary btn-xs' %>
                  <%= link_to t(:delete), admin_resume_section_path(resume_section), method: :delete, data: { confirm: t(:are_you_sure) }, :class => 'btn btn-danger btn-xs' %>
                </div>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= render partial: "shared/admin_index_table_panel_footer", locals: { :entry_objects => @resume_sections } %>
    </div>
    <div class="pagination-controls"><%= will_paginate(@resume_sections) %></div>
  </div>
</div>