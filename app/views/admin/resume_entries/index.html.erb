<%= render partial: "shared/header", locals: {:title => 'Listing Resume Entries'} %>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Organization</th>
    <th>Timeframe</th>
    <th>Section</th>
    <th>Sort Order</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @resume_entries.each do |resume_entry| %>
      <tr>
        <td style="width: 30%"><%= resume_entry.title %></td>
        <td style="width: 20%"><%= resume_entry.organization %></td>
        <td style="width: 25%"><%= resume_entry.timeframe %></td>
        <td style="width: 15%"><% if defined? resume_entry.resume_section.title %><%= resume_entry.resume_section.title %><% end %></td>
        <td><%= resume_entry.sortOrder %></td>
        <td><%= link_to 'Show', admin_resume_entry_path(resume_entry) %></td>
        <td><%= link_to 'Edit', edit_admin_resume_entry_path(resume_entry) %></td>
        <td><%= link_to 'Destroy', admin_resume_entry_path(resume_entry), method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= render partial: "shared/admin_bottom_links", locals: {:links => [{:title => 'New Resume Entry', :path => new_admin_resume_entry_path}]} %>
