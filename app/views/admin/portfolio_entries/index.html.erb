<%= render partial: "shared/admin_header", locals: {:title => 'Listing Portfolio Entries', :links => [{:title => 'New Entry', :path => new_admin_portfolio_entry_path}]} %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Platform</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @portfolio_entries.joins(:portfolio_platform).order('"portfolio_platforms"."sortOrder" ASC, "portfolio_entries"."sortOrder" ASC').order(:sortOrder).each do |portfolio_entry| %>
      <tr>
        <td><%= portfolio_entry.title %></td>
        <td nowrap><% if defined? portfolio_entry.portfolio_platform.title %><%= portfolio_entry.portfolio_platform.title %><% end %></td>
        <td nowrap><%= portfolio_entry.role %></td>
        <td><%= link_to 'Show', admin_portfolio_entry_path(portfolio_entry) %></td>
        <td><%= link_to 'Edit', edit_admin_portfolio_entry_path(portfolio_entry) %></td>
        <td><%= link_to 'Destroy', admin_portfolio_entry_path(portfolio_entry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

