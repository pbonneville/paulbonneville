<%= render partial: "shared/admin_form_errors", locals: { :entry_errors => @skill_tag.errors } %>

<!-- Nav tabs -->
<ul class="nav nav-tabs">
  <li class="active"><a href="#general" data-toggle="tab">General</a></li>
</ul>

<%= form_for(@skill_tag, :url => url_for([:admin, @skill_tag]), :html => { :class => 'admin' }) do |f| %>
    <div class="row admin-row">
      <div class="col-md-9">
        <div class="tab-content admin-tab-content">
          <div class="tab-pane active" id="general">
            <div class="field">
              <%= f.label :tag %>
              <%= f.text_field :tag %>
            </div>
            <div class="field">
              <%= f.label 'Skill Tag Type' %>
              <%= f.collection_select(:skill_tag_type_id, SkillTagType.all.order(:sortOrder), :id, :tagType) %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <%= f.submit :class => 'btn btn-block btn-success btn-lg' %>
        <ul class="list-group">
          <li class="list-group-item">
            <%= f.label 'Created' %>
            <%= @skill_tag.created_at %>
          </li>
          <li class="list-group-item">
            <%= f.label 'Last Updated' %>
            <%= @skill_tag.updated_at %>
          </li>
        </ul>
      </div>
    </div>
<% end %>
