<%= render partial: "shared/header_admin", locals: {:title => 'Listing Resume Sections'} %>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Sortorder</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @resume_sections.each do |resume_section| %>
      <tr>
        <td><%= resume_section.title %></td>
        <td><%= resume_section.sortOrder %></td>
        <td><%= link_to 'Show', resume_section %></td>
        <td><%= link_to 'Edit', edit_resume_section_path(resume_section) %></td>
        <td><%= link_to 'Destroy', resume_section, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>
<a href="<%= new_resume_section_path %>" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-plus"></span></a>
