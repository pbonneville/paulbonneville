<%= render partial: "shared/header_admin", locals: {:title => 'Listing Resume Entries'} %>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Organization</th>
    <th>Timeframe</th>
    <th>Section</th>
    <th>Sort Order</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @resume_entries.each do |resume_entry| %>
      <tr>
        <td style="width: 30%"><%= resume_entry.title %></td>
        <td style="width: 20%"><%= resume_entry.organization %></td>
        <td style="width: 25%"><%= resume_entry.timeframe %></td>
        <td style="width: 15%"><%= resume_entry.resume_section.title %></td>
        <td><%= resume_entry.sortOrder %></td>
        <td><%= link_to 'Show', resume_entry %></td>
        <td><%= link_to 'Edit', edit_resume_entry_path(resume_entry) %></td>
        <td><%= link_to 'Destroy', resume_entry, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>
<a href="<%= new_resume_entry_path %>" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-plus"></span></a>
