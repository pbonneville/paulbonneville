<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
  <div class="container">
    <h1 class="tk-myriad-pro" style="text-shadow: black 0.1em 0.1em 0.1em;">
      <strong>I am an Interactive Developer.</strong></h1>

    <p class="tk-myriad-pro" style="text-shadow: black 0.1em 0.1em 0.1em;">I build mobile apps, desktop applications and
      websites in sunny Lafayette, Colorado.<br/><em>That's right next door to Boulder, just in case you were
      wondering.</em></p>

    <p><a class="btn btn-primary btn-lg" role="button" href="resume.html">View My Resume
      <span class="glyphicon glyphicon-chevron-right" style="font-size: 16px;"></span></a></p>
  </div>
</div>

<div class="container">
  <!-- Example row of columns -->
  <div class="row">
    <% @entries.each do |entry| %>
        <div class="col-md-4 blog-feature-container">
          <div class="blog-index-title"><%= entry.title %></div>
          <p><%= entry.excerpt %></p>
          <%= link_to raw('Read More <span class="glyphicon glyphicon-chevron-right" style="font-size: 12px"></span>'), {:controller => 'blog', :action => 'show', :id => entry}, :class => 'btn btn-default' %>
        </div>
    <% end %>
  </div>
</div> <!-- /container -->
