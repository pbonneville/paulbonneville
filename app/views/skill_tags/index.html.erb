<div class="container">
  <%= render partial: "shared/header_admin", locals: {:title => 'Listing Skill Tags'} %>

  <table class="listTable">
    <thead>
    <tr>
      <th>Tag</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @skill_tags.each do |skill_tag| %>
        <tr>
          <td><%= skill_tag.tag %></td>
          <td><%= skill_tag.skill_tag_type.tagType %></td>
          <td><%= link_to 'Show', skill_tag %></td>
          <td><%= link_to 'Edit', edit_skill_tag_path(skill_tag) %></td>
          <td><%= link_to 'Destroy', skill_tag, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <br/>
  <a href="<%= new_skill_tag_path %>" class="btn btn-lg btn-primary"><span class="glyphicon glyphicon-plus"></span></a>
</div>